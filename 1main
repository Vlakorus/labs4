class storage( val name: String,  var author: String,  var years: Int)



fun main(){

    val Book1 = storage("анна каренина", "Лев Толстой", 1878)
    val Book2 = storage("НЕЧТО", "Кэмпбелл Джон Вуд", 2008)
    val Book3 = storage("1984", "Джордж Оруэлл", 1949)
    val Book4 = storage("Преступление и наказание", "Достоевский Фёдор", 1866)
    val Book5 = storage("Яд бессмертия", "Робертс Нора", 1996)

    print("Название книги: ")
    println(Book1.name)
    print("Автор: ")
    println(Book1.author)
    print("Год выпуска: ")
    println(Book1.years)
    println("\n")

    print("Название книги: ")
    println(Book2.name)
    print("Автор: ")
    println(Book2.author)
    print("Год выпуска: ")
    println(Book2.years)
    println("\n")

    print("Название книги: ")
    println(Book3.name)
    print("Автор: ")
    println(Book3.author)
    print("Год выпуска: ")
    println(Book3.years)
    println("\n")

    print("Название книги: ")
    println(Book4.name)
    print("Автор: ")
    println(Book4.author)
    print("Год выпуска: ")
    println(Book4.years)
    println("\n")

    print("Название книги: ")
    println(Book5.name)
    print("Автор: ")
    println(Book5.author)
    print("Год выпуска: ")
    println(Book5.years)
    println()

}
